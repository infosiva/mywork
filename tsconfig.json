{
"compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [ "es6", "dom" ],
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}